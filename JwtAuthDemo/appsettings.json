{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  // JWT (JSON Web Token) ayarları
  "Jwt": {
    // Token'ı imzalamak için kullanılan gizli anahtar (Secret Key)
    // ⚠️ Güvenlik için:
    // - En az 32 karakter olmalı
    // - Gerçek projede asla repo'ya açık şekilde konmamalı
    "Key": "super-secret-jwt-key-123456789-VERY-STRONG-KEY-2026",

    // Token'ı oluşturan sistem / domain
    // Token doğrulama sırasında bu değer kontrol edilir
    "Issuer": "yourdomain.com",

    // Token'ın hangi istemciler için geçerli olduğunu belirtir
    // Web, mobil, başka servisler olabilir
    "Audience": "yourdomain.com",

    // Token'ın geçerlilik süresi (dakika cinsinden)
    // Süre dolunca token otomatik olarak geçersiz olur
    "ExpireMinutes": 30
  },

  "AllowedHosts": "*"
}
